
<div class="container">
	<div class="col-md-12">
		<div class="row row-pb-md">
			<h2>Videos</h2>
			<% @posts.each do |post| %>
				<div class="col-md-4">
					<div class="video-container">
							<div class="video">
								<h3><%= link_to post.title, post_path(post.id) %></h3>
								<%= video_tag (post.video), controls: true, size:"250x140" %>
								<% if post.user.profile_image_id != nil %>
								<%= image_tag post.user.profile_image_id.to_s, size:"30x30" %>
								<% else %>
									<%= image_tag　'/images/default.jpg' %>
								<% end %>
								<%= link_to post.user.name, user_path(post.user_id) %>
								<span class="created_time">
									<%= post.created_at.strftime("%Y/%m/%d") %>
								</span>
								<div class="post_content">
									<p><%= post.content %></p>
								</div>
								<% if post.user_id == current_user.id %>
									<%= link_to "delete", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
								<% end %>
							</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>